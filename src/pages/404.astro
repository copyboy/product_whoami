---
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/Container.astro';
import { Icon } from 'astro-icon/components';
import { getLink } from '@utils/paths';
---

<BaseLayout title="Page Not Found" description="Sorry, we couldn't find the page you're looking for.">
  <Container as="main" class="py-16 max-w-4xl mx-auto text-center">
    <div class="flex flex-col items-center">
      <div class="text-9xl font-bold text-indigo-600 dark:text-indigo-500">404</div>
      <h1 class="text-3xl md:text-4xl font-bold mt-6 mb-4">Page Not Found</h1>
      <p class="text-xl text-slate-600 dark:text-slate-400 mb-10">
        Sorry, we couldn't find the page you're looking for.
      </p>
      
      <div class="mb-16 grid grid-cols-1 md:grid-cols-3 gap-5">
        <a 
          href={getLink('/')} 
          class="flex items-center justify-center gap-2 px-6 py-4 bg-indigo-100 hover:bg-indigo-200 dark:bg-indigo-900/40 dark:hover:bg-indigo-900/60 rounded-lg transition-colors"
        >
          <Icon name="heroicons:home" class="h-5 w-5" />
          <span>Go Home</span>
        </a>
        <a 
          href={getLink('/blog')} 
          class="flex items-center justify-center gap-2 px-6 py-4 bg-indigo-100 hover:bg-indigo-200 dark:bg-indigo-900/40 dark:hover:bg-indigo-900/60 rounded-lg transition-colors"
        >
          <Icon name="heroicons:document-text" class="h-5 w-5" />
          <span>Read Blog</span>
        </a>
        <a 
          href={getLink('/categories')} 
          class="flex items-center justify-center gap-2 px-6 py-4 bg-indigo-100 hover:bg-indigo-200 dark:bg-indigo-900/40 dark:hover:bg-indigo-900/60 rounded-lg transition-colors"
        >
          <Icon name="heroicons:tag" class="h-5 w-5" />
          <span>Browse Categories</span>
        </a>
      </div>
      
      <div>
        <h2 class="text-xl font-bold mb-4">You might be interested in:</h2>
        <div class="flex flex-wrap justify-center gap-3">
          <a href={getLink('/tags/javascript')} class="text-indigo-600 dark:text-indigo-400 hover:underline">JavaScript</a>
          <a href={getLink('/tags/css')} class="text-indigo-600 dark:text-indigo-400 hover:underline">CSS</a>
          <a href={getLink('/tags/react')} class="text-indigo-600 dark:text-indigo-400 hover:underline">React</a>
          <a href={getLink('/tags/web-development')} class="text-indigo-600 dark:text-indigo-400 hover:underline">Web Development</a>
        </div>
      </div>
    </div>
  </Container>
</BaseLayout> 